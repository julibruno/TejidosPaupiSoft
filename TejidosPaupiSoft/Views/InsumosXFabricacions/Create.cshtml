@model TejidosPaupiSoft.Models.InsumosXFabricacion

@{
    ViewBag.Title = "Create";
}

@if (ViewBag.SinStock != null)
{
    <script type="text/javascript">
            window.onload = function () {
            alert("Has excedido el Stock Disponible. Recorda que el Stock Actual es de @ViewBag.StockActual. Verifique")
        }
    </script>
}

@if (ViewBag.ErrorCalculoCosto != null)
{
    <script type="text/javascript">
            window.onload = function () {
            alert(@ViewBag.ErrorCalculoCosto)
        }
    </script>
}

<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4>Cantidad del Insumo</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IdFabricacionProducto)
                            @Html.HiddenFor(model => model.IdInsumo)

                            <div class="form-group">

                                Insumo Seleccionado:
                                <b>
                                    @ViewBag.DescripcionInsumo
                                </b>

                            </div>


                            <div class="form-group">

                                Unidad de Medida:
                                <b>
                                    @ViewBag.UnidadMedidaInsumo
                                </b>

                            </div>

                            <div class="form-group">

                                Cantidad Disponible en Stock:
                                <b>
                                    @ViewBag.StockActual  @ViewBag.UnidadMedidaInsumo
                                </b>

                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Agregar" class="btn btn-rounded btn-success" />
                                    <a href="/InsumosXFabricacions/IdFabricacionGenerada=@Html.DisplayFor(model => model.IdFabricacionProducto)" id="Cancelar" class="btn btn-rounded btn-danger">Cancelar</a>

                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
