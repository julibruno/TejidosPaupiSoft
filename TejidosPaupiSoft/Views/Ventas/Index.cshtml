@model IEnumerable<TejidosPaupiSoft.Models.Venta>

@{
    ViewBag.Title = "Index";
}

<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">

        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Ventas</h5>
                    <div class="card-body">
                        <a href="/FabricacionProductos/IndexParaVenta" id="BotonCrear" class="btn btn-rounded btn-outline-secondary">Crear Nueva Venta</a>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>
                                            Nro. Venta
                                        </th>
                                        <th>
                                            Producto Vendido
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Fecha)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cliente)
                                        </th>
                                        <th>
                                            Precio Final
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FabricacionProducto.Costo)
                                        </th>
                                        

                                        <th></th>
                                    </tr>
                                    </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NroVenta)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.FabricacionProducto.Producto.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fecha)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Cliente)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioFinal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FabricacionProducto.Costo)
                                        </td>

                                        <td>
                                            <a href="/Ventas/Details/@item.Id" data-toggle="tooltip" data-placement="top" title="Detalle">
                                                <img src="~/Content/assets/images/ABM/buscar.png">
                                            </a>
                                            <a href="/Ventas/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Editar">
                                                <img src="~/Content/assets/images/ABM/Editar.png">
                                            </a>
                                            <a href="/Ventas/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Borrar">
                                                <img src="~/Content/assets/images/ABM/Borrar.png">
                                            </a>
                                        </td>
                                    </tr>
                                    }</tbody>

                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

