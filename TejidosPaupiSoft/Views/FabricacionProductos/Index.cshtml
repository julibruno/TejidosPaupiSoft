@model IEnumerable<TejidosPaupiSoft.Models.FabricacionProducto>

@{
    ViewBag.Title = "Index";
}

<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">

        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Elaboracion de Productos</h5>
                    <div class="card-body">
                        <a href="/Productos/IndexParaFabricacion" id="BotonCrear" class="btn btn-rounded btn-outline-primary">Nueva Elaboracion</a>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>
                                            Nro. de Elaboracion</th>
                                        <th>
                                            Producto
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Costo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.PrecioSugerido)
                                        </th>


                                        <th></th>
                                    </tr>
                                    </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Producto.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Costo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PrecioSugerido)
                                        </td>
                                       

                                        <td>
                                            <a href="/FabricacionProductos/Details/@item.Id" data-toggle="tooltip" data-placement="top" title="Detalle">
                                                <img src="~/Content/assets/images/ABM/buscar.png">
                                            </a>
                                            <a href="/FabricacionProductos/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Editar">
                                                <img src="~/Content/assets/images/ABM/Editar.png">
                                            </a>
                                            <a href="/InsumosXCompras?IdCompraGenerada=@item.Id" data-toggle="tooltip" data-placement="top" title="Agregar Producto">
                                                <img src="~/Content/assets/images/ABM/Editar.png">
                                            </a>
                                            <a href="/FabricacionProductos/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Borrar">
                                                <img src="~/Content/assets/images/ABM/Borrar.png">
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

