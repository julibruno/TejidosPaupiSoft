@model IEnumerable<TejidosPaupiSoft.Models.Insumos>

@{
    ViewBag.Title = "Index";
}
<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">

        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Insumos</h5>
                    <div class="card-body">
                        <a href="/Insumos/Create" id="BotonCrear" class="btn btn-rounded btn-outline-secondary">Crear Nuevo Insumo</a>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>
                                            Tipo de Insumo
                                        </th>
                                        <th>
                                            Tipo de Lana
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Color)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cantidad)
                                        </th>
                                        <th>
                                            Unidad de Medida
                                        </th>


                                        <th>Acciones</th>
                                    </tr>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoInsumo.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoLana.Descripcion)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Color)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cantidad)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TipoInsumo.UnidadMedida.Descripcion)
                                            </td>


                                            <td>
                                                <a href="/Insumos/Details/@item.Id" data-toggle="tooltip" data-placement="top" title="Detalle">
                                                    <img src="~/Content/assets/images/ABM/buscar.png">
                                                </a>
                                                <a href="/Insumos/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Editar">
                                                    <img src="~/Content/assets/images/ABM/Editar.png">
                                                </a>
                                                <a href="/Insumos/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Borrar">
                                                    <img src="~/Content/assets/images/ABM/Borrar.png">
                                                </a>
                                            </td>
                                        </tr>
                                        }
                                        </tbody>

</table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
