@model IEnumerable<TejidosPaupiSoft.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">

        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Productos</h5>
                    <div class="card-body">
                        <a href="Productos/Create" id="BotonCrear" class="btn btn-rounded btn-outline-primary">Crear Nuevo Producto</a>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Descripcion)
                                        </th>
                                       
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                     
                                            <td>
                                                <a href="/Productos/Details/@item.Id" data-toggle="tooltip" data-placement="top" title="Detalle">
                                                    <img src="~/Content/assets/images/ABM/buscar.png">
                                                </a>
                                                <a href="/Productos/Edit/@item.Id" data-toggle="tooltip" data-placement="top" title="Editar">
                                                    <img src="~/Content/assets/images/ABM/Editar.png">
                                                </a>
                                                <a href="/Productos/Delete/@item.Id" data-toggle="tooltip" data-placement="top" title="Borrar">
                                                    <img src="~/Content/assets/images/ABM/Borrar.png">
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                            </table>
                            </div>
                    </div>
                </div>
        </div>
    </div>
    </div>
</div>