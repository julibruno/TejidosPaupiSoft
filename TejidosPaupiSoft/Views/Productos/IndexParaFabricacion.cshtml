@model IEnumerable<TejidosPaupiSoft.Models.Producto>

@{
    ViewBag.Title = "IndexParaFabricacion";
}



<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">

        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Seleccione el Producto elaborado</h5>
                    <div class="card-body">
                     
                            <div class="alert alert-primary" role="alert">
                                Selecciona el producto elaborado. En caso de no estar en la lista Crealo ingresando al boton "Crear Nuevo Producto"
                            </div>
                   
                        <a href="/Productos/Create" id="BotonCrear" class="btn btn-rounded btn-outline-primary">Crear Nuevo Producto</a>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered first">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Descripcion)
                                        </th>

                                        <th> Seleccione el producto elaborado</th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Seleccionar", "ProductoParaElaboracion", new { idProductoSeleccionado = item.Id }) |

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
    </div>
   </div>
</div>
